ScreenManager:
    MainMenu:
    FaceDetection:

<MainMenu>:
    name: "main_menu"
    FloatLayout:
        Image:
            source: "background.jpg"  # Replace with your image file
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        BoxLayout:
            orientation: "vertical"
            spacing: 20
            size_hint: 0.6, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Label:
                text: "üé≠ Face Detection App"
                font_size: 36
                bold: True
                color: 1, 0.5, 0, 1
                size_hint_y: 0.3

            Button:
                text: "üîç Face Detect"
                font_size: 24
                size_hint_y: 0.2
                background_color: 0, 0.5, 1, 1
                background_normal: ""
                canvas.before:
                    Color:
                        rgba: (1, 0.5, 0, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                on_release: app.root.current = "face_detect"

            Button:
                text: "‚ùå Exit"
                font_size: 24
                size_hint_y: 0.2
                background_color: 1, 0, 0, 1
                background_normal: ""
                canvas.before:
                    Color:
                        rgba: (1, 0, 0, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                on_release: app.stop()

<FaceDetection>:
    name: "face_detect"
    FloatLayout:
        Image:
            source: "background.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 1

            Image:
                id: video_feed
                allow_stretch: True

            Button:
                text: "üîô Back to Menu"
                font_size: 22
                size_hint_y: 0.2
                background_color: 1, 0.5, 0, 1
                background_normal: ""
                canvas.before:
                    Color:
                        rgba: (1, 0.5, 0, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                on_release: app.root.current = "main_menu"
